@{
    ViewData["Title"] = "Wine Travel Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<WineTravelBlog.Models.Region>

<h2>Wine Blog</h2>
<hr />
<h4>@Html.DisplayNameFor(model => model.Name)</h4>
<ul>
    @foreach (var listRegion in Model)
    {
        <li>@Html.DisplayFor(modelItem => listRegion.Name) | @Html.ActionLink("Details", "Details", new { id = listRegion.RegionId }) | @Html.ActionLink("Edit", "Edit", new { id = listRegion.RegionId }) | @Html.ActionLink("Delete", "Delete", new { id = listRegion.RegionId })</li>
    }
</ul>
<p>@Html.ActionLink("Add new region", "Create")</p>