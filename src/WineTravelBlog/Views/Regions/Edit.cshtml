@{
    ViewData["Title"] = "Wine Travel Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WineTravelBlog.Models.Region

<h2>Edit</h2>
<hr />
<h4>Edit this Region: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RegionId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    @Html.LabelFor(model => model.Location)
    @Html.EditorFor(model => model.Location)
    @Html.LabelFor(model => model.GrowingSeason)
    @Html.EditorFor(model => model.GrowingSeason)
    @Html.LabelFor(model => model.AvgRainfall)
    @Html.EditorFor(model => model.AvgRainfall)

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>