@{
    ViewData["Title"] = "Wine Travel Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WineTravelBlog.Models.Winery

<h2>Edit</h2>
<hr />
<h4>Edit this winery: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.WineryId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.Location)
    @Html.EditorFor(model => model.Location)

    @Html.LabelFor(model => model.Style)
    @Html.EditorFor(model => model.Style)

    @Html.LabelFor(model => model.PrimaryVarietals)
    @Html.EditorFor(model => model.PrimaryVarietals)

    @Html.LabelFor(model => model.AvgPrice)
    @Html.EditorFor(model => model.AvgPrice)

    @Html.LabelFor(model => model.RegionId)
    @Html.DropDownList("RegionId")

    <input type="submit" value="Save" class="btn btn-default" />
}
@Html.ActionLink("Back to List", "Index")